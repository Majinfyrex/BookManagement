{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>Author</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ author.firstName }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ author.lastName }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ author.bio }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_author_index') }}">Retour à la liste</a>
    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('app_author_edit', {'id': author.id}) }}">Modifier</a>

    {{ include('author/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
